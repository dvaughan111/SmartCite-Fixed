{
  "manifest_version": 3,
  "name": "SmartCite - Academic Citation Generator",
  "version": "1.0.1",
  "version_name": "1.0.1 fixed",
  "description": "One-click citations from any webpage. Never struggle with broken citation tools again.",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Citation",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "optional_host_permissions": [
    "*://*/*"
  ],
  
  "host_permissions": [
    "https://doi.org/*"
  ]
}
